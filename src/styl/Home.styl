@import url('https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,300&family=Roboto:ital,wght@1,900&display=swap');


@font-face {
    font-family: Droid 
    src: url(./droid.regular.ttf)
    format:(ttf)
}
body::-webkit-scrollbar {
    display: none;
}

.Home{
    overflow-y: hidden;
    background-color: black
    width: 100%
    height: auto
    background-size: cover
    background-attachment:fixed;
    .title-content{
        display: flex
        align-items: center 
        flex-wrap: wrap
        margin: 0px auto 0px auto
        max-width: 615px
        
    }
    .top-title{
        margin: 60px auto 0px auto
        white-space: nowrap;
        letter-spacing: 5px;
        font-family: "Droid"
        color: rgba(255, 255, 255, 0.352)
        font-size: 220px
        font-weight: bold
        animation: fadeIn
        animation-duration: 3s
    }
    .middle-title{
        color: rgba(255, 255, 255, 0.352)
        display: flex
        align-items: center 
        flex-wrap: wrap
        font-size: 220px
        font-weight: bold
        letter-spacing: 5px
        font-family: "Droid"
        margin: 0px
    
        p{
            margin: 5px auto 5px auto
            overflow: hidden;
            line-height: 0.9
        }
        p:nth-child(1){
        height: 10px;
        }
        p:nth-child(2){
        height: 20px;
        }
        p:nth-child(3){
        height: 30px;
        }
        p:nth-child(n+4){
        height: 50px;
        }
        p:nth-child(n+8){
        height: 30px;
        }
    }

    
    .bottom-title{
        margin: 0px auto 0px auto
        height: 900px
        white-space: nowrap
        background-color: black
        color: white
        font-weight: bold
        position: fixed
        top: 300px
        
    }
    .bottom-title-big{
        margin: 0px auto 0px auto
        line-height: 0.9
        font-size: 220px
        font-family: "Droid"
        letter-spacing: 5px
        animation: fadeIn
        animation-duration: 2s
    }
    .bottom-title-small{
        animation: fadeIn
        animation-duration: 4s
    }
}
        